{
  "extends": [
    "config:recommended",
    ":disableRateLimiting",
    ":automergeMinor",
    ":label(dependencies)"
  ],
  "gradle": {
    "enabled": true
  },
  "platformAutomerge": true,
  "packageRules": [
    {
      "groupName": "Dropwizard",
      "matchPackageNames": ["/^io.dropwizard:/"]
    },
    {
      "groupName": "Mockito",
      "matchPackageNames": ["/^org.mockito:/"]
    },
    {
      "groupName": "slf4j",
      "matchPackageNames": ["/^org.slf4j:/"]
    }
  ]
}
